/* pages/player/index.wxss */

/* 歌曲旋转动画 */
@keyframes rotate{
  to{
    transform: rotate(360deg);
  }
  from{
    transform: rotate(0deg);
  }
}

.container{
  position: relative;
  height: 100vh;
  overflow: hidden;
  background: rgba(0, 0, 0, .2);
}
.player-bg{
  position: absolute;
  z-index: -1;
  width: 100vw;
  height: 100vh;
  filter: blur(30px);
}

.player-tab{
  height: calc(100vh - 120px);
}
.player-swiper{
  height: 100%;
}
.player-cover{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  background: radial-gradient(
    rgba(255,255,255, .3) ,
    rgba(255,255,255, .3) 260rpx,
      transparent 261rpx
  ) no-repeat center center / 520rpx 520rpx;
}
.player-cover image{
  display: block;
  margin: auto;
  width: 500rpx;
  height: 500rpx;
  border-radius: 1000px;
}
.player-cover image.play{
  animation: rotate 10s infinite linear;
}
.player-cover image.paused{
  animation-play-state: paused;
}
.player-lyric{
  height: 100%;
  padding-top: 50rpx;
  box-sizing: border-box;
  text-align: center;
  color: #ccc;
}
.player-lyric swiper{
  height: 100%;
}
.player-lyric swiper .on{
  color: #fff;
  text-shadow: 0 0 1px #fff,
                0 0 3px #fff;
}

/* 底部菜单 */
.player-bottom{}
.player-menu{
  display: flex;
  justify-content: space-around;
  padding: 0 50rpx;
}
.player-menu image{
  width: 30px;
  height: 30px;
}

.player-slider{
  display: flex;
  align-items: center;
  padding: 0 10px;
  font-size: 10px;
  color: #fafafa;
}
.player-slider slider{
  margin: 10px 15px;
  flex: 1;
}
.player-btn image{
  width: 35px;
  height: 35px;
}

/* 呼出菜单 */
.psong-view{
  position: absolute;
  z-index: 999;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  transform: translateY(100%);
  transition: transform 300ms;
}
.psong-view.on{
  transform: translateY(0%);
}
.psong-header{
  padding: 10px 15px;
  font-size: 16px;
  line-height: 25px;
  border-bottom: 1px solid #eee;
}
.psong-header image{
  float: right;
  width: 25px;
  height: 25px;
}
.psong-list{
  padding-left: 10px;
  padding-bottom: 15px;
  max-height: 700rpx;
  overflow-y: scroll;
}
.psong-item{
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}
.psong-item view{
  flex: 1;
  line-height: 20px;
}
.psong-item view text{
  color: #aeaeae;
  font-size: 10px;
}
.psong-item image{
  display: block;
  margin-right: 5px;
  width: 20px;
  height: 20px;
}