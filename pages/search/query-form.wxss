.query-form{
  display: block;
  background: #b3d4db;
  padding: 5px 8px; 
}
.query-form button{
  float: right;
  padding: 0;
  margin: 0 0 0 5px;
  width: 25px;
  height: 25px;
  background: transparent;
}
.query-form button::after{
  border: none;
}
.query-form button image{
  display: block;
  width: 100%;
  height: 100%;
}
.query-form input{
  border-bottom: 1px solid #ddd;
  color: #fafafa;
}